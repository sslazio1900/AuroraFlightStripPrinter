    <None Remove="Icons\it_symbol_WHITE_64.ico" />
    <None Remove="Icons\it_symbol_WHITE_96.ico" />
    <None Remove="Images\icon.png" />
    <None Remove="Images\it_symbol_WHITE.svg" />
    <None Remove="Images\ivao_white.svg" />
    <None Remove="Images\Logo_IT_WHITE.svg" />
    <None Remove="Images\logo_s_white.svg" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Icons\it_symbol_WHITE_128.ico" />
    <Content Include="Icons\icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Icons\icon.ico" />
    <Resource Include="Icons\it_symbol_WHITE_48.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="Icons\it_symbol_WHITE_128.ico" />
