<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <UserSecretsId>69FC90A6-26BF-484E-9D51-50B42EE5E555</UserSecretsId>
    <ApplicationIcon>Icons\icon.ico</ApplicationIcon>
    <Version>1.2.0</Version>
    <Configurations>Debug;Release;Beta</Configurations>
    <ApplicationManifest>app.manifest</ApplicationManifest>
    <AssemblyName>Aurora Flight Strip Printer</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Icons\icon.ico" />
    <None Remove="Icons\it_symbol_WHITE_128.ico" />
    <None Remove="Icons\it_symbol_WHITE_16.ico" />
