    <Resource Include="Images\ivao_white.svg" />
    <Resource Include="Images\Logo_IT_WHITE.svg" />
    <Resource Include="Images\logo_s_white.svg" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Caliburn.Micro" Version="4.0.230" />
    <PackageReference Include="Ivao.It.AuroraConnector" Version="1.2.4" />
